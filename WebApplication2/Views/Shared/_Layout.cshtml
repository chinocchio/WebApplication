<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MyApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #ACE1AF;
        }

        .btn-custom {
            background-color: #133b23;
            color: white;
            border: none;
        }

            .btn-custom:hover {
                background-color: #ACE1AF; /* slightly darker for hover effect */
            }
         .offcanvas {
    background-color: #1F7D53 !important;
    color: white; /* optional: makes text more readable */
  }

        main {
            flex: 1;
        }

        .logo {
            width: 200px;
            margin-bottom: 15px;
        }


        .toggle-offcanvas-btn {
            position: fixed;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            z-index: 1050;
            background-color: #1f4a2d;
            border: none;
            border-radius: 0 5px 5px 0;
            width: 40px;
            height: 40px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s ease;
        }

            .toggle-offcanvas-btn:hover {
                background-color: #5a6268;
            }

            .toggle-offcanvas-btn i {
                font-size: 18px;
                transition: transform 0.3s ease;
            }

        /* Optional: rotate the arrow when offcanvas is open */
        .offcanvas.show + .toggle-offcanvas-btn i {
            transform: rotate(180deg);
        }

        .custom-input {
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 10px 12px;
            margin-bottom: 12px;
        }

        .btn-custom {
            background-color: #1A4D2E;
            color: white;
            border: none;
            padding: 10px 16px;
            border-radius: 8px;
            width: 100%;
        }

           
    </style>
</head>
<body>
   
    <!-- Offcanvas -->
    <div class="offcanvas offcanvas-start" data-bs-backdrop="static" tabindex="-1" id="staticBackdrop" aria-labelledby="staticBackdropLabel">
        <div class="offcanvas-header">
            <img src="@Url.Content("~/src/full-logo-1.png")" class="logo" alt="Logo" />

            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="search-container">
                <form method="get">
                    <input type="text" name="searchTerm" class="form-control custom-input"
                           value="@ViewBag.SearchTerm" placeholder="Search Contract No, Fullname, or Unit Code" />

                    <button type="submit" asp-action="Index1" class="btn-custom">Search</button>
                </form> 
            </div>

            <div>
                <a class="btn btn-custom mt-3" asp-area="" asp-controller="Property" asp-action="Create">New Property</a>
                <a class="btn btn-custom mt-3" asp-area="" asp-controller="SalesTransaction" asp-action="Create">New Sale</a>
            </div>
        </div>
    </div>

    <!-- Arrow toggle button -->
    <button class="toggle-offcanvas-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#staticBackdrop" aria-controls="staticBackdrop">
        <i class="bi bi-chevron-left"></i>
    </button>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <main class="container mt-4">
        @RenderBody()
    </main>

  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

