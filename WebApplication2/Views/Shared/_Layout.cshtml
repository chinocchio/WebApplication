        // Dark mode toggle functionality
        document.addEventListener("DOMContentLoaded", function () {
            const toggleSwitch = document.querySelector('.theme-switch input[type="checkbox"]');
            const sliderIcon = document.querySelector('.slider-icon');
            const currentTheme = localStorage.getItem('theme');

            // Set initial theme
            if (currentTheme) {
                document.documentElement.setAttribute('data-theme', currentTheme);
                if (currentTheme === 'dark') {
                    toggleSwitch.checked = true;
                    sliderIcon.classList.remove('bi-moon-fill');
                    sliderIcon.classList.add('bi-sun-fill');
                }
            }

            function switchTheme(e) {
                if (e.target.checked) {
                    document.documentElement.setAttribute('data-theme', 'dark');
                    localStorage.setItem('theme', 'dark');
                    sliderIcon.classList.remove('bi-moon-fill');
                    sliderIcon.classList.add('bi-sun-fill');
                } else {
                    document.documentElement.setAttribute('data-theme', 'light');
                    localStorage.setItem('theme', 'light');
                    sliderIcon.classList.remove('bi-sun-fill');
                    sliderIcon.classList.add('bi-moon-fill');
                }
            }

            toggleSwitch.addEventListener('change', switchTheme, false);

            // Add click handler for the icon
            sliderIcon.addEventListener('click', function() {
                toggleSwitch.checked = !toggleSwitch.checked;
                const event = new Event('change');
                toggleSwitch.dispatchEvent(event);
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            var successToast = document.getElementById('successToast');
            if (successToast) {
                var toast = new bootstrap.Toast(successToast, { delay: 4000 });
                toast.show();
            }
            var errorToast = document.getElementById('errorToast');
            if (errorToast) {
                var toast = new bootstrap.Toast(errorToast, { delay: 5000 });
                toast.show();
            }
        });
    </script>

