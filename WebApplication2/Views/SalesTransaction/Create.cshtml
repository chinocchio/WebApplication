@model WebApplication2.ViewModels.SalesTransactionCreateViewModel

@{
    ViewData["Title"] = "Create Sales Transaction";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="mb-4">Create Sales Transaction</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="card mb-4">
            <div class="card-header">Sales Transaction Info</div>
            <div class="card-body row g-3">
                <div class="col-md-6">
                    <label asp-for="ContractNumber" class="form-label"></label>
                    <input asp-for="ContractNumber" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="TypeOfSale" class="form-label"></label>
                    <input asp-for="TypeOfSale" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="HoldingDate" class="form-label"></label>
                    <input asp-for="HoldingDate" type="date" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="TransactionType" class="form-label"></label>
                    <input asp-for="TransactionType" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="PromoDiscount" class="form-label"></label>
                    <input asp-for="PromoDiscount" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="StatusInGeneral" class="form-label"></label>
                    <input asp-for="StatusInGeneral" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Milestone" class="form-label"></label>
                    <input asp-for="Milestone" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="NewColorStatus" class="form-label"></label>
                    <input asp-for="NewColorStatus" class="form-control" />
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">Select Existing Business Partner</div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="SelectedBusinessPartnerId" class="form-label"></label>
                    <select id="bpDropdown" asp-for="SelectedBusinessPartnerId" asp-items="Model.ExistingBusinessPartners" class="form-select">
                        <option value="">-- Create New Business Partner --</option>
                    </select>
                </div>

                <div id="newBpFields" class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Fullname" class="form-label"></label>
                        <input asp-for="Fullname" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Role" class="form-label"></label>
                        <input asp-for="Role" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CustomerCode" class="form-label"></label>
                        <input asp-for="CustomerCode" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ClientBase" class="form-label"></label>
                        <input asp-for="ClientBase" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IdSubmitted" class="form-label"></label>
                        <input asp-for="IdSubmitted" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IdDateSubmitted" class="form-label"></label>
                        <input asp-for="IdDateSubmitted" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EmailAddress" class="form-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ContactNumber" class="form-label"></label>
                        <input asp-for="ContactNumber" class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">Select Property</div>
            <div class="card-body">
                <label asp-for="SelectedPropertyId" class="form-label"></label>
                <select asp-for="SelectedPropertyId" asp-items="Model.Properties" class="form-select">
                    <option value="">-- Select a Property --</option>
                </select>
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        const dropdown = document.getElementById("bpDropdown");
        const newFields = document.getElementById("newBpFields");

        function toggleNewFields() {
            newFields.style.display = dropdown.value ? "none" : "flex";
        }

        toggleNewFields();
        dropdown.addEventListener("change", toggleNewFields);
    </script>
}
