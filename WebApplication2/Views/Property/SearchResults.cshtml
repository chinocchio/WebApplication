                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>Document Code</th>
                                                                    <th>Document Name</th>
                                                                    <th>Customer Code</th>
                                                                    <th>Date Submitted</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var doc in item.SubmittedDocuments)
                                                                {
