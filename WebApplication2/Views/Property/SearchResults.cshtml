                            <th>Type of Sale</th>
                            <th>Holding Date</th>
                            <th>Promo Discount</th>
                            <th>Transaction Type</th>
                            <th>Milestone</th>
                            <th>Status Color</th>
                            <th>Status In General</th>
                        </tr>
                    </thead>
