@model WebApplication2.ViewModels.PropertyListViewModel

@{
    ViewData["Title"] = "Sales Transactions";
    Layout = "_Layout";
}

<h2>Sales Transactions</h2>

<form method="get">
    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search Contract No, Fullname, or Unit Code" />
    <button type="submit">Search</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    if (Model.SalesTransactions != null && Model.SalesTransactions.Any())
    {
        <ul class="nav nav-tabs mt-4" id="transactionTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="sales-tab" data-bs-toggle="tab" href="#sales" role="tab">Sales Info</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="buyer-tab" data-bs-toggle="tab" href="#buyer" role="tab">Buyer Info</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="property-tab" data-bs-toggle="tab" href="#property" role="tab">Property Info</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="proponent-tab" data-bs-toggle="tab" href="#proponent" role="tab">Sales Proponent Info</a>
            </li>
        </ul>

        <div class="tab-content border p-3" id="transactionTabsContent">
            @section Scripts {
                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        document.querySelectorAll(".clickable-row").forEach(row => {
                            row.addEventListener("click", function () {
                                const targetId = this.getAttribute("data-bs-target");
                                const contentRow = document.getElementById(targetId);
                                if (contentRow) {
                                    contentRow.classList.toggle("d-none");
                                }
                            });
                        });
                    });
                </script>
    }

            <div class="tab-pane fade show active" id="sales" role="tabpanel">
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>Contract Number</th>
                            <th>Type of Sale</th>
                            <th>Holding Date</th>
                            <th>Promo Discount</th>
                            <th>Transaction Type</th>
                            <th>Milestone</th>
                            <th>Status Color</th>
                            <th>Status In General</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model.SalesTransactions)
                        {
                            var targetId = $"details_{transaction.SalesTransactionId}";

                            <tr class="clickable-row table-primary" style="cursor:pointer;" data-bs-target="@targetId">
                                <td>@transaction.ContractNumber</td>
                                <td>@transaction.TypeOfSale</td>
                                <td>@transaction.HoldingDate</td>
                                <td>@transaction.PromoDiscount</td>
                                <td>@transaction.TransactionType</td>
                                <td>@transaction.Milestone</td>
                                <td>@transaction.NewColorStatus</td>
                                <td>@transaction.StatusInGeneral</td>
                            </tr>

                            <tr id="@targetId" class="d-none bg-light">
                                <td colspan="8">
                                    <!-- Sales Document and Credit Review Tabs -->
                                    <ul class="nav nav-tabs mt-3" id="salesDocTabs_@transaction.SalesTransactionId" role="tablist">
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link active" id="salesDoc-tab-@transaction.SalesTransactionId" data-bs-toggle="tab" data-bs-target="#salesDocContent-@transaction.SalesTransactionId" type="button" role="tab">
                                                Sales Document
                                            </button>
                                        </li>
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link" id="resarvationFee-tab-@transaction.SalesTransactionId" data-bs-toggle="tab" data-bs-target="#resarvationFeeContent-@transaction.SalesTransactionId" type="button" role="tab">
                                                Payment Term 
                                            </button>
                                        </li>
                                    </ul>


                                    <!-- Tab content for Document submitted -->
                                    <div class="tab-content p-3 border" id="salesDocTabsContent_@transaction.SalesTransactionId">
                                        <div class="tab-pane fade show active" id="salesDocContent-@transaction.SalesTransactionId" role="tabpanel">
                                            @if (transaction.SalesDocument != null)
                                            {
                                                <!-- Document Submission Summary -->
                                                <div class="card mb-4">
                                                    <div class="card-header bg-primary text-white">
                                                        <strong>Document Submission Summary</strong>
                                                    </div>
                                                    <div class="card-body p-3">
                                                        <!-- Tabs nav -->
                                                        <ul class="nav nav-tabs" id="documentTabs-@transaction.SalesTransactionId" role="tablist">
                                                            <li class="nav-item" role="presentation">
                                                                <button class="nav-link active" id="setA-tab-@transaction.SalesTransactionId" data-bs-toggle="tab" data-bs-target="#setA-@transaction.SalesTransactionId" type="button" role="tab">
                                                                    Set A
                                                                </button>
                                                            </li>
                                                            <li class="nav-item" role="presentation">
                                                                <button class="nav-link" id="setB-tab-@transaction.SalesTransactionId" data-bs-toggle="tab" data-bs-target="#setB-@transaction.SalesTransactionId" type="button" role="tab">
                                                                    Set B
                                                                </button>
                                                            </li>
                                                        </ul>

                                                        <!-- Tabs content -->
                                                        <div class="tab-content pt-3" id="documentTabsContent-@transaction.SalesTransactionId">
                                                            <!-- Set A -->
                                                            <div class="tab-pane fade show active" id="setA-@transaction.SalesTransactionId" role="tabpanel">
                                                                <table class="table table-bordered table-striped table-sm text-center align-middle">
                                                                    <thead class="table-light">
                                                                        <tr>
                                                                            <th>Document Type</th>
                                                                            <th>Document Name</th>
                                                                            <th>Completion/Holding Date</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <tr>
                                                                            <td>Proof Used Upon Holding</td>
                                                                            <td>@transaction.SalesDocument.RfProofUsedUponHolding</td>
                                                                            <td>@transaction.SalesDocument.HoldingDate</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>SA1/SA2</td>
                                                                            @* <td>@(DateTime.TryParse(transaction.SalesDocument.Sa1Sa2CompletionDate?.ToString(), out _) ? "" : transaction.SalesDocument.Sa1Sa2CompletionDate)</td> *@
                                                                            @* <td>@(DateTime.TryParse(transaction.SalesDocument.Sa1Sa2CompletionDate?.ToString(), out var date2) ? date2.ToShortDateString() : "")</td> *@
                                                                            <td> </td>
                                                                            <td>@transaction.SalesDocument.Sa1Sa2CompletionDate</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Proof of Income Submitted</td>
                                                                            <td>@transaction.SalesDocument.ProofOfIncomeSubmitted</td>
                                                                            <td> </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Submission of Docs for CI Endorsement</td>
                                                                            @* <td>@(DateTime.TryParse(transaction.SalesDocument.DocsSubmissionForCiEndorsement?.ToString(), out _) ? "" : transaction.SalesDocument.DocsSubmissionForCiEndorsement)</td> *@
                                                                            @* <td>@(DateTime.TryParse(transaction.SalesDocument.DocsSubmissionForCiEndorsement?.ToString(), out var date4) ? date4.ToShortDateString() : "")</td> *@
                                                                            <td> </td>
                                                                            <td> @transaction.SalesDocument.DocsSubmissionForCiEndorsement </td>
                                                                        </tr>

                                                                        
                                                                    </tbody>
                                                                </table>
                                                            </div>

                                                            <!-- Set B -->
                                                            <div class="tab-pane fade" id="setB-@transaction.SalesTransactionId" role="tabpanel">
                                                                <table class="table table-bordered table-striped table-sm text-center align-middle">
                                                                    <thead class="table-light">
                                                                        <tr>
                                                                            <th>Document Type</th>
                                                                            <th>Completion/Holding Date</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <tr>
                                                                            <td>Set B Docs</td>
                                                                            <td>@transaction.SalesDocument.SetBDocsCompletionDate</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Month Contracted</td>
                                                                            <td>@transaction.SalesDocument.MonthContracted</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Month Booked</td>
                                                                            <td>@transaction.SalesDocument.MonthBooked</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>CTS, SPA, and DOR Out Date</td>
                                                                            <td>@transaction.SalesDocument.CtsSpaAndDOROutDate</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>Compliance Due</td>
                                                                            <td>@transaction.SalesDocument.ComplianceDUe</td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>


                                                <!-- PDC Information Summary -->
                                                <div class="card mb-4">
                                                    <div class="card-header bg-info text-white">
                                                        <strong>PDC/ADA Information Summary</strong>
                                                    </div>
                                                    <div class="card-body p-3">
                                                        <table class="table table-bordered table-striped table-sm text-center align-middle">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>Total PDCs Required</th>
                                                                    <th>Bank PDC Issued</th>
                                                                    <th>Total ADA/PDCs Submitted</th>
                                                                    <th>Date Submitted</th>
                                                                    <th>PDC Completion Date</th>
                                                                    <th>Start Date</th>
                                                                    <th>End Date</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td>@transaction.SalesDocument.TotalPDCSRequired</td>
                                                                    <td>@transaction.SalesDocument.BankPDCIssued</td>
                                                                    <td>@transaction.SalesDocument.TotalAdaPdcsSubmitted</td>
                                                                    <td>@transaction.SalesDocument.DateSubmitted</td>
                                                                    <td>@transaction.SalesDocument.PDCCompletionDate</td>
                                                                    <td>@transaction.SalesDocument.StartDate</td>
                                                                    <td>@transaction.SalesDocument.EndDate</td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>

                                                <!-- CTS Information Summary -->
                                                <div class="card mb-4">
                                                    <div class="card-header bg-success text-white">
                                                        <strong>CTS Information Summary</strong>
                                                    </div>
                                                    <div class="card-body p-3">
                                                        <table class="table table-bordered table-striped table-sm text-center align-middle">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>CTS to Date</th>
                                                                    <th>CTS Status</th>
                                                                    <th>Type of CTS</th>
                                                                    <th>Signed by Broker</th>
                                                                    <th>CTS</th>
                                                                    <th>Date Received from Sales Admin</th>
                                                                    <th>Date Notary (Client/AMG)</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td>@transaction.SalesDocument.CTSToDate</td>
                                                                    <td>@transaction.SalesDocument.CTSStatus</td>
                                                                    <td>@transaction.SalesDocument.TypeOfCTS</td>
                                                                    <td>@transaction.SalesDocument.SignedByBroker</td>
                                                                    <td>@transaction.SalesDocument.CtsACN</td>
                                                                    <td>@transaction.SalesDocument.DateRecievedFromSalesAdmin</td>
                                                                    <td>@transaction.SalesDocument.DateNotary</td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>

                                                


                                                <!-- Additional Information -->
                                                <div class="card mb-4">
                                                    <div class="card-header bg-secondary text-white">
                                                        <strong>Additional Information</strong>
                                                    </div>

                                                    <div class="card-body p-3">
                                                        <table class="table table-bordered table-striped table-sm text-center align-middle">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>Lacking Docs</th>
                                                                    <th>Ageing Category</th>
                                                                    <th>P1/Old Color Status</th>   
                                                                    
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td>@transaction.SalesDocument.LackingDocs</td>
                                                                    <td>@transaction.SalesDocument.AegingCategory</td>
                                                                    <td>@transaction.SalesDocument.P1OldColorStatus </td>
                                                                    
                                                                    
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                                    
                                            }
                                            else
                                            {
                                                <em class="text-muted">No sales document data available.</em>
                                            }
                                        </div>
                                    


                                   

                                        <div class="tab-pane fade" id="resarvationFeeContent-@transaction.SalesTransactionId" role="tabpanel">
                                            @* Credit Review content goes here *@
                                            @if (transaction.PaymentTerm != null)
                                            {
                                                <dl class="row">
                                                    <dt class="col-sm-3">RF AMOUNT PAID TO UNIT:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.RfAmountPaidToUnit</dd>

                                                    <dt class="col-sm-3">RF AMOUNT PAID TO GMTOE:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.RfAmountPaidToGMTOE</dd>

                                                    <dt class="col-sm-3">TOTAL:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.RfAmountGMTOE_Unit</dd>

                                                    <dt class="col-sm-3">RF CREDITED:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.RfDateCredited</dd>

                                                    <dt class="col-sm-3">RF OR NUMBER:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.RfOrNumber</dd>

                                                    <dt class="col-sm-3">PAYMENT TERM:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.Paymentterm</dd>

                                                    <dt class="col-sm-3">% TOB:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.PercentTOB</dd>

                                                    <dt class="col-sm-3">TOB MODE OF PAYMENT BANK/CASH:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.TOBModeOfPayment</dd>

                                                    <dt class="col-sm-3">TOB:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.TOB</dd>

                                                    <dt class="col-sm-3">ESTIMATED BANK MA at 7.5%:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.EstimatedBankMAFor7Point5Percent</dd>

                                                    <dt class="col-sm-3">START DATE ( 1st MA):</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.StartDate1stMA</dd>

                                                    <dt class="col-sm-3">UNIT/PARKING:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.UnitParking</dd>

                                                    <dt class="col-sm-3">TRANSFER FEE:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.TransferFee</dd>

                                                    <dt class="col-sm-3">AMOUNT PAID TO UNIT:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.AmountPaidToUnit</dd>

                                                    <dt class="col-sm-3">AMOUNT PAID TO TRANSFER FEE:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.AmountPaidToTF</dd>

                                                    <dt class="col-sm-3">DATE PAID:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.DatePaid</dd>

                                                    <dt class="col-sm-3">FIRST MA OR NUMBER:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.FirstMAOrNumber</dd>

                                                    <dt class="col-sm-3">PAYMENT DUE DATE:</dt>
                                                    <dd class="col-sm-9">@transaction.PaymentTerm.PaymentDueDate</dd>
                                                    @* Add more CreditReview fields here *@
                                                </dl>
                                            }
                                            else
                                            {
                                                <em class="text-muted">No credit review data available.</em>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="buyer" role="tabpanel">
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>Client's Name</th>
                            <th>Role</th>
                            <th>Customer Code</th>
                            <th>Client Base</th>
                            <th>Contact Number</th>
                            <th>Email Address</th>
                            <th>ID Sbmitted</th>
                            <th>Date ID Submitted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model.SalesTransactions)
                        {
                            if (transaction.BusinessPartner?.OtherBuyers != null)
                            {
                                foreach (var buyer in transaction.BusinessPartner.OtherBuyers)
                                {
                                    <tr>
                                        <td>@buyer.Fullname</td>
                                        <td>@buyer.Role</td>
                                        <td>@buyer.CustomerCode</td>
                                        <td>@buyer.ClientBase</td>
                                        <td>@buyer.ContactNumber</td>
                                        <td>@buyer.EmailAddress</td>
                                        <td>@buyer.IdSubmitted</td>
                                        <td>@buyer.IdDateSubmitted</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
                <!-- AFTER buyers table, Credit Review tab system -->

                <ul class="nav nav-tabs" id="creditReviewTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="credit-tab" data-bs-toggle="tab" data-bs-target="#credit" type="button" role="tab" aria-controls="credit" aria-selected="true">
                            Credit Review
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="buyerdocs-tab" data-bs-toggle="tab" data-bs-target="#buyerdocs" type="button" role="tab" aria-controls="buyerdocs" aria-selected="false">
                            Buyer Documents
                        </button>
                    </li>
                </ul>

                <div class="tab-content border p-3" id="creditReviewTabsContent">
                    <div class="tab-pane fade show active" id="credit" role="tabpanel" aria-labelledby="credit-tab">
                        @foreach (var transaction in Model.SalesTransactions)
                        {
                            if (transaction.CreditReview != null)
                            {
                                <div class="mb-4" style="max-height: 600px; overflow-y: auto; padding: 1rem; border: 1px solid #ccc; border-radius: 8px;">
                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <strong>CI Result:</strong> @transaction.CreditReview.CreditReviewResult
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>CMAP Result:</strong> @transaction.CreditReview.CMAPResult
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>CI Remarks:</strong> @transaction.CreditReview.CreditReviewRemarks
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <strong>NDI Status:</strong> @transaction.CreditReview.NDIStatus
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Is Bank Approvable:</strong> @transaction.CreditReview.IsBankApporvable
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Red Tag:</strong> @transaction.CreditReview.RedTag
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <strong>Red Tag Reason:</strong> @transaction.CreditReview.RedTagReason
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>CI Completion Date:</strong> @(transaction.CreditReview.CiCompletionDate.ToString("MM/dd/yyyy"))
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Reason For Purchase:</strong> @transaction.CreditReview.ReasonForPurchase
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <strong>1st Home In PH:</strong> @transaction.CreditReview.FirstHomeInPH
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Number of home in PH:</strong> @transaction.CreditReview.NumberOfHomesInPH
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>With Other CPGI Units:</strong> @transaction.CreditReview.WithOtherCPGIUnits
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <strong>PROJECT/UNIT NO. OF OTHER CPGI UNIT:</strong> @transaction.CreditReview.ProjectOrUnitCodeOfOtherCPGIUnit
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>INCOME DECLARED PRINCIPAL (PHP):</strong> @transaction.CreditReview.IncomeDeclaredPb
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>INCOME DECLARED CO-BORROWER:</strong> @transaction.CreditReview.IncomeDeclaredCb
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <strong>TOTAL INCOME (COMBINED):</strong> @transaction.CreditReview.TotalIncomeCombined
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Type of Income:</strong> @transaction.CreditReview.TypeOfIncome
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>NDI Rate:</strong> @transaction.CreditReview.NdiRate
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <strong>Net Disposable Income:</strong> @transaction.CreditReview.NetDisposableIncome
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Other Loans:</strong> @transaction.CreditReview.OtherLoans
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Net NDI:</strong> @transaction.CreditReview.NetNdi
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <strong>NDI vs Bank MA TOB Amount:</strong> @transaction.CreditReview.NdiVsBankMaTobAmt
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Percent of NDI vs MA:</strong> @transaction.CreditReview.PercentOfNdiVsMa
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>NDI Category:</strong> @transaction.CreditReview.NdiCategory
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <strong>Max Term:</strong> @transaction.CreditReview.MaxTerm
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Estimated Max Term:</strong> @transaction.CreditReview.EstimatedMaxTerm
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>Persona Category:</strong> @transaction.CreditReview.PersonaCategory
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <strong>IMMIGRANT/NON-IMMIGRANT:</strong> @transaction.CreditReview.ImmigrantOrNonImmigrant
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>HIGH RISK (Y/N):</strong> @transaction.CreditReview.HighRishk
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>HIGH RISK FACTOR/S:</strong> @transaction.CreditReview.HighRiskFactors
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No Credit Review information available for this transaction.</p>
                            }
                        }
                    </div>

                    <div class="tab-pane fade" id="buyerdocs" role="tabpanel" aria-labelledby="buyerdocs-tab">
                        @foreach (var transaction in Model.SalesTransactions)
                        {
                            if (transaction.BuyerDocument != null)
                            {
                                <div class="mb-4">
                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <strong>SPA:</strong> @transaction.BuyerDocument.SPA
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>SPA APOSTILLED/CONSULARIZED/NOTARIZED:</strong> @transaction.BuyerDocument.SPA_ACN
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>DOR:</strong> @transaction.BuyerDocument.DOR
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>BIRTH CERTIFICATE:</strong> @transaction.BuyerDocument.BirthCertificate
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>CENOMAR:</strong> @transaction.BuyerDocument.Cenomar
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>MARRIAGE CERTIFICATE:</strong> @transaction.BuyerDocument.MarriageCertificate
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>DEATH CERTIFICATE:</strong> @transaction.BuyerDocument.DeathCertificate
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <strong>PROOF OF BILLING 1:</strong> @transaction.BuyerDocument.ProofOfBilling1
                                        </div>
                                        <div class="col-md-4 mb-3">
