@model WebApplication2.ViewModels.PropertyListViewModel

@{
    ViewData["Title"] = "Property Search";
}
<style>
    body {
        background: linear-gradient(135deg, #1A4D2E 0%, #4CAF50 100%);
        min-height: 100vh;
        background-attachment: fixed;
    }
    .main-card {
        background: rgba(26, 77, 46, 0.92);
        border-radius: 28px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18), 0 2px 16px 0 rgba(44,62,80,0.10);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        padding: clamp(2.5rem, 6vw, 3.5rem) clamp(2rem, 6vw, 3rem);
        margin: 4rem auto 2rem auto;
        max-width: 820px;
        border: 1.5px solid rgba(255,255,255,0.13);
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: box-shadow 0.3s, background 0.3s;
        position: relative;
        z-index: 2;
    }
    .logo-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2.5rem;
    }
    .logo {
        width: 150px;
        height: auto;
        margin-bottom: 1.2rem;
        filter: drop-shadow(0 4px 16px #4CAF50) drop-shadow(0 2px 4px rgba(0,0,0,0.12));
        border-radius: 16px;
        background: rgba(255,255,255,0.05);
        padding: 0.5rem;
        transition: filter 0.3s, width 0.3s;
    }
    .welcome-text {
        color: #fff;
        font-size: 2rem;
        font-weight: 800;
        letter-spacing: 1.5px;
        margin-bottom: 1.5rem;
        text-align: center;
        text-shadow: 0 2px 12px rgba(44,62,80,0.18);
        line-height: 1.2;
        transition: text-shadow 0.3s;
    }
    .tagline {
        color: #e0ffe0;
        font-size: 1.15rem;
        text-align: center;
        margin-bottom: 2.2rem;
        font-style: italic;
        opacity: 0.92;
        letter-spacing: 0.5px;
    }
    .search-form {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 2.5rem;
        justify-content: center;
        width: 100%;
        max-width: 600px;
    }
    .search-input {
        border: none;
        border-radius: 30px 0 0 30px;
        padding: 1rem 1.5rem;
        font-size: 1.1rem;
        background: rgba(255,255,255,0.93);
        color: #1A4D2E;
        box-shadow: 0 2px 8px rgba(44,62,80,0.08);
        outline: none;
        width: 65%;
        min-width: 0;
        transition: all 0.3s;
    }
    .search-input:focus {
        background: #fff;
        box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.3);
        transform: translateY(-1px);
    }
    .search-button {
        background: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 0 30px 30px 0;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.7rem;
        transition: all 0.3s;
        box-shadow: 0 2px 8px rgba(44,62,80,0.08);
        cursor: pointer;
    }
    .search-button:hover, .search-button:focus {
        background: #388e3c;
        box-shadow: 0 4px 16px rgba(44,62,80,0.12);
        transform: translateY(-1px) scale(1.03);
    }
    .divider {
        border-top: 1.5px solid rgba(255,255,255,0.2);
        margin: 2.5rem 0;
        width: 100%;
    }
    .quick-actions {
        display: flex;
        gap: 2rem;
        justify-content: center;
        margin-bottom: 2.5rem;
        width: 100%;
        flex-wrap: wrap;
    }
    .action-button {
        background: rgba(255,255,255,0.18);
        color: #fff;
        border: 1.5px solid #4CAF50;
        border-radius: 16px;
        padding: 1.2rem 2.5rem;
        font-weight: 600;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 0.8rem;
        box-shadow: 0 2px 8px rgba(44,62,80,0.08);
        text-decoration: none;
        transition: all 0.3s;
        cursor: pointer;
        min-width: 180px;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }
    .action-button:hover, .action-button:focus {
        background: #4CAF50;
        color: #fff;
        border-color: #388e3c;
        box-shadow: 0 4px 16px rgba(44,62,80,0.12);
        transform: translateY(-2px) scale(1.03);
    }
    .action-button i {
        font-size: 1.4rem;
        color: #e0ffe0;
        margin-right: 0.5rem;
    }
    .subtext {
        color: rgba(255,255,255,0.93);
        font-size: 1.08rem;
        text-align: center;
        line-height: 1.6;
        margin-top: 2rem;
        margin-bottom: 0.5rem;
    }
    /* SVG Wave */
    .wave {
        position: absolute;
        top: -60px;
        left: 0;
        width: 100%;
        height: 60px;
        z-index: 1;
    }
    @@media (max-width: 900px) {
        .main-card { padding: 2rem 1.5rem; max-width: 95%; }
        .welcome-text { font-size: 1.6rem; }
        .search-input, .search-button { font-size: 1rem; }
    }
    @@media (max-width: 700px) {
        .main-card { padding: 1.5rem 1rem; max-width: 99%; }
        .search-form { flex-direction: column; gap: 1rem; max-width: 100%; }
        .search-input, .search-button { width: 100%; border-radius: 30px; text-align: center; }
        .quick-actions { flex-direction: column; gap: 1rem; }
    }
    @@media (max-width: 480px) {
        .main-card { padding: 1.5rem 0.8rem; }
        .welcome-text { font-size: 1.3rem; }
        .logo { width: 100px; }
        .action-button { padding: 1rem 1.5rem; font-size: 1rem; }
    }
</style>
<div class="main-card" role="main" aria-label="Sales Transactions">
    <svg class="wave" viewBox="0 0 1440 60" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill="#4CAF50" fill-opacity="0.25" d="M0,30 C360,60 1080,0 1440,30 L1440,60 L0,60 Z"></path></svg>
    <div class="logo-container">
        <img src="@Url.Content("~/src/full-logo-1.png")" class="logo" alt="Company Logo" />
        <div class="welcome-text">Welcome to Sales Transactions</div>
        <div class="tagline">Find, create, and manage your property sales with ease.</div>
    </div>
    <form method="get" class="search-form" aria-label="Search Sales Transactions">
        <input type="text"
               name="searchTerm"
               class="search-input"
               value="@(Model?.SearchTerm ?? "")"
               placeholder="Search Contract No, Fullname, or Unit Code"
               aria-label="Search input" />
        <button type="submit" asp-action="SearchResults" class="search-button" aria-label="Search">
            <i class="bi bi-search"></i>
            <span>Search</span>
        </button>
    </form>
    <div class="divider" aria-hidden="true"></div>
    <div class="quick-actions">
        <a asp-controller="Property" asp-action="Create" class="action-button" aria-label="Create New Property">
            <i class="bi bi-plus-circle"></i>
            <span>New Property</span>
        </a>
        <a asp-controller="SalesTransaction" asp-action="Create" class="action-button" aria-label="Create New Sale">
            <i class="bi bi-cart-plus"></i>
            <span>New Sale</span>
        </a>
    </div>
    <div class="subtext">
        <span>Tip: Use the search bar to quickly find contracts, customers, or units. Or use the quick actions to add new records!</span>
    </div>
</div>
<!-- Optionally, add Bootstrap Icons CDN if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"> 