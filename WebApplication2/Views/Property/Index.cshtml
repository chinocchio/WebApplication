@model WebApplication2.ViewModels.PropertyListViewModel

@{
    ViewData["Title"] = "Sales Transactions";
}

<style>
    body {
        min-height: 100vh;
        background: linear-gradient(135deg, #e0f7fa 0%, #c8e6c9 100%);
        font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
    }

    .search-container {
        max-width: 600px;
        margin: 4rem auto;
        padding: 2.5rem;
        background: rgba(255,255,255,0.65);
        border-radius: 2rem;
        box-shadow: 0 8px 32px rgba(44,62,80,0.18);
        text-align: center;
        animation: fadeIn 0.7s cubic-bezier(.39,.575,.56,1.000);
        color: #388e3c;
        backdrop-filter: blur(12px);
        border: 1.5px solid rgba(76,175,80,0.12);
        position: relative;
    }

    .logo-container {
        margin-bottom: 2.5rem;
        text-align: center;
        position: relative;
        height: 120px;
    }

    .logo-bg {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 140px;
        height: 140px;
        background: radial-gradient(circle, rgba(76,175,80,0.18) 60%, rgba(76,175,80,0.08) 100%);
        border-radius: 50%;
        filter: blur(2px);
        z-index: 0;
    }

    .logo {
        width: 120px;
        height: auto;
        margin-bottom: 1.5rem;
        transition: all 0.5s cubic-bezier(.39,.575,.56,1.000);
        filter: drop-shadow(0 8px 24px rgba(44,62,80,0.18)) drop-shadow(0 0 16px #4CAF50);
        animation: floatLogo 2.5s ease-in-out infinite alternate;
        position: relative;
        z-index: 1;
    }

    @@keyframes floatLogo {
        0% {
            transform: translateY(0) scale(1);
        }

        100% {
            transform: translateY(-12px) scale(1.04);
        }
    }

    .welcome-text {
        color: #388e3c;
        font-size: 1.7rem;
        margin-bottom: 2rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        position: relative;
        display: inline-block;
        text-shadow: 0 2px 8px rgba(44,62,80,0.08);
    }

        .welcome-text::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: #a5d6a7;
            border-radius: 2px;
        }

    .search-form {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        position: relative;
    }

    .search-input {
        border: 2px solid #b2dfdb;
        border-radius: 1.2rem;
        padding: 1.25rem 1.5rem;
        font-size: 1.1rem;
        transition: all 0.25s;
        width: 100%;
        box-sizing: border-box;
        background: rgba(255,255,255,0.7);
        color: #388e3c;
        font-weight: 500;
        box-shadow: 0 2px 8px rgba(44,62,80,0.04);
    }

        .search-input::placeholder {
            color: #81c784;
            opacity: 0.8;
        }

        .search-input:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 0 4px #c8e6c9;
            outline: none;
            background: #fff;
        }

    .search-button {
        background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
        color: #fff;
        border: none;
        padding: 1.25rem 2rem;
        border-radius: 1.2rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.25s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 16px rgba(44,62,80,0.10);
        font-size: 1.08rem;
        position: relative;
        overflow: hidden;
    }

        .search-button:hover {
            background: linear-gradient(90deg, #38f9d7 0%, #43e97b 100%);
            color: #388e3c;
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 8px 24px rgba(44,62,80,0.13);
        }

        .search-button i {
            font-size: 1.2rem;
        }

    .quick-actions {
        display: flex;
        gap: 1.5rem;
        margin-top: 3rem;
        justify-content: center;
    }

    .action-button {
        background: rgba(255,255,255,0.25);
        color: #388e3c;
        border: 2px solid #b2dfdb;
        padding: 1rem 1.75rem;
        border-radius: 1.2rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.25s;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(44,62,80,0.04);
    }

        .action-button:hover {
            background: #4CAF50;
            color: #fff;
            border-color: #388e3c;
            transform: translateY(-2px) scale(1.04);
            box-shadow: 0 8px 24px rgba(44,62,80,0.10);
        }

        .action-button i {
            font-size: 1.2rem;
        }

    .subtext {
        color: #388e3c;
        font-size: 1rem;
        margin-top: 2rem;
        line-height: 1.6;
        padding: 0 2rem;
        opacity: 0.85;
        font-weight: 500;
    }

    .feature-highlights {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 2.5rem;
        padding: 1.5rem 0.5rem;
        background: rgba(255,255,255,0.35);
        border-radius: 1.2rem;
        border: 1.5px solid #b2dfdb;
        box-shadow: 0 2px 8px rgba(44,62,80,0.04);
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: #388e3c;
        font-size: 1.05rem;
        font-weight: 600;
        letter-spacing: 0.2px;
    }

        .feature-item i {
            color: #43e97b;
            font-size: 1.3rem;
        }

    @@media (max-width: 768px) {
        .search-container {
            margin: 2rem 1rem;
            padding: 1.2rem 0.5rem;
        }

        .quick-actions {
            flex-direction: column;
            gap: 1rem;
        }

        .action-button {
            width: 100%;
            justify-content: center;
        }

        .feature-highlights {
            flex-direction: column;
            gap: 1rem;
            text-align: left;
        }

        .welcome-text {
            font-size: 1.25rem;
        }

        .search-input {
            padding: 1rem 1.25rem;
        }

        .search-button {
            padding: 1rem 1.5rem;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="search-container">
    <div class="logo-container">
        <div class="logo-bg"></div>
        <img src="@Url.Content("~/src/full-logo-1.png")" class="logo" alt="Logo" />
        <div class="welcome-text">Welcome to Sales Transactions</div>
    </div>
    <form method="get" class="search-form">
        <input type="text"
               name="searchTerm"
               class="search-input"
               value="@Model.SearchTerm"
               placeholder="Search Contract No, Fullname, or Unit Code" />
        <button type="submit" asp-action="Index1" class="search-button">
            <i class="bi bi-search"></i>
            <span>Search Transactions</span>
        </button>
    </form>
    <div class="quick-actions">
        <a asp-controller="Property" asp-action="Create" class="action-button">
            <i class="bi bi-plus-circle"></i>
            <span>New Property</span>
        </a>
        <a asp-controller="SalesTransaction" asp-action="Create" class="action-button">
            <i class="bi bi-cart-plus"></i>
            <span>New Sale</span>
        </a>
    </div>
    <div class="feature-highlights">
        <div class="feature-item">
            <i class="bi bi-check-circle"></i>
            <span>Easy Search</span>
        </div>
        <div class="feature-item">
            <i class="bi bi-check-circle"></i>
            <span>Quick Actions</span>
        </div>
        <div class="feature-item">
            <i class="bi bi-check-circle"></i>
            <span>User Friendly</span>
        </div>
    </div>
    <div class="subtext">
        Enter a contract number, full name, or unit code to search for transactions.
        Use the quick action buttons above to create new properties or sales.
    </div>
</div>


